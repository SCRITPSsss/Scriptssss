--// SERVICES
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local ProximityPromptService = game:GetService("ProximityPromptService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")

local player = Players.LocalPlayer

--// GUI
local gui = Instance.new("ScreenGui")
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- AUTO GRAB BUTTON
local autoBtn = Instance.new("TextButton")
autoBtn.Size = UDim2.new(0, 100, 0, 40)
autoBtn.Position = UDim2.new(1, -110, 0.3, -20)
autoBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
autoBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
autoBtn.Font = Enum.Font.GothamBold
autoBtn.TextSize = 18
autoBtn.Text = "Grab: OFF"
autoBtn.Parent = gui
autoBtn.BorderSizePixel = 0

autoBtn.MouseEnter:Connect(function()
	autoBtn.BackgroundColor3 = Color3.fromRGB(180, 40, 40)
end)
autoBtn.MouseLeave:Connect(function()
	if autoBtn.Text == "Grab: ON" then
		autoBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
	else
		autoBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
	end
end)

-- STATE
local autoEnabled = false
local grabRange = 12
local holdingPrompts = {}
local ragdollTimers = {}

-- Toggle auto-grab
autoBtn.MouseButton1Click:Connect(function()
	autoEnabled = not autoEnabled
	if autoEnabled then
		autoBtn.Text = "Grab: ON"
		autoBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
	else
		autoBtn.Text = "Grab: OFF"
		autoBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
		for prompt,_ in pairs(holdingPrompts) do
			pcall(function() prompt:InputHoldEnd() end)
		end
		holdingPrompts = {}
		ragdollTimers = {}
	end
end)

-- helper: find a basepart for a prompt
local function findAnyPart(prompt)
	if not prompt or not prompt.Parent then return nil end
	if prompt.Parent:IsA("BasePart") then return prompt.Parent end
	if prompt.Parent:IsA("Model") then
		if prompt.Parent.PrimaryPart then return prompt.Parent.PrimaryPart end
		for _,v in ipairs(prompt.Parent:GetDescendants()) do
			if v:IsA("BasePart") then return v end
		end
	end
	local p = prompt.Parent
	while p and p.Parent do
		p = p.Parent
		if p:IsA("BasePart") then return p end
	end
	return nil
end

-- Find the only other player
local function getOtherPlayer()
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr ~= player then return plr end
	end
	return nil
end

-- Fire a command on a target
local function runCommand(commandName, targetPlayer)
	local args = {targetPlayer, commandName}
	pcall(function()
		ReplicatedStorage
			:WaitForChild("Packages")
			:WaitForChild("Net")
			:WaitForChild("RE/AdminPanelService/ExecuteCommand")
			:FireServer(unpack(args))
	end)
end

-- MAIN: auto-hold prompts that are in range
RunService.RenderStepped:Connect(function()
	if not autoEnabled then return end
	local char = player.Character
	if not char then return end
	local hrp = char:FindFirstChild("HumanoidRootPart")
	if not hrp then return end

	for _, prompt in ipairs(Workspace:GetDescendants()) do
		if prompt:IsA("ProximityPrompt") and prompt.Enabled then
			local part = findAnyPart(prompt)
			if part then
				local dist = (hrp.Position - part.Position).Magnitude
				if dist <= grabRange then
					pcall(function() prompt:InputHoldBegin() end)
					holdingPrompts[prompt] = true
				else
					if holdingPrompts[prompt] then
						pcall(function() prompt:InputHoldEnd() end)
						holdingPrompts[prompt] = nil
						ragdollTimers[prompt] = nil
					end
				end
			end
		end
	end
end)

-- When player begins holding
ProximityPromptService.PromptButtonHoldBegan:Connect(function(prompt, inputType)
	if not autoEnabled then return end
	ragdollTimers[prompt] = tick()

	-- schedule balloon on other player at 1.45s
	task.delay(1.45, function()
		if ragdollTimers[prompt] and holdingPrompts[prompt] and autoEnabled then
			local other = getOtherPlayer()
			if other then
				runCommand("balloon", other)
			end
			ragdollTimers[prompt] = nil
		end
	end)
end)

-- When player stops holding
ProximityPromptService.PromptButtonHoldEnded:Connect(function(prompt, inputType)
	ragdollTimers[prompt] = nil
end)

-- When prompt triggered
ProximityPromptService.PromptTriggered:Connect(function(prompt, inputType, triggeringPlayer)
	if triggeringPlayer and triggeringPlayer ~= player then return end
	if not autoEnabled then return end

	-- Optional: run other AP spam commands immediately
	task.spawn(function()
		local other = getOtherPlayer()
		if other then
			runCommand("tiny", other)
			runCommand("inverse", other)
			runCommand("jumpscare", other)
			runCommand("morph", other)
			runCommand("rocket", other)
		end
	end)
end)
