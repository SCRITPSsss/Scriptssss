--// SERVICES
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local ProximityPromptService = game:GetService("ProximityPromptService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")

local player = Players.LocalPlayer

--// GUI
local gui = Instance.new("ScreenGui")
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- AUTO GRAB BUTTON
local autoBtn = Instance.new("TextButton")
autoBtn.Size = UDim2.new(0, 100, 0, 40)
autoBtn.Position = UDim2.new(1, -110, 0.3, -20)
autoBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
autoBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
autoBtn.Font = Enum.Font.GothamBold
autoBtn.TextSize = 18
autoBtn.Text = "Grab: OFF"
autoBtn.BorderSizePixel = 0
autoBtn.Parent = gui

-- STATE
local autoEnabled = false
local grabRange = 12
local scanning = true
local holdingPrompts = {}
local holdStartTimes = {}
local ragdolledThisHold = {}

-- TOGGLE
autoBtn.MouseButton1Click:Connect(function()
	autoEnabled = not autoEnabled
	if autoEnabled then
		autoBtn.Text = "Grab: ON"
		autoBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
		scanning = true
	else
		autoBtn.Text = "Grab: OFF"
		autoBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
		scanning = false
		for prompt in pairs(holdingPrompts) do
			pcall(function() prompt:InputHoldEnd() end)
		end
		holdingPrompts = {}
		holdStartTimes = {}
		ragdolledThisHold = {}
	end
end)

-- FIND PART FOR PROMPT
local function findAnyPart(prompt)
	if not prompt or not prompt.Parent then return nil end
	local p = prompt.Parent
	if p:IsA("BasePart") then return p end
	if p:IsA("Model") then
		if p.PrimaryPart then return p.PrimaryPart end
		for _, v in ipairs(p:GetDescendants()) do
			if v:IsA("BasePart") then return v end
		end
	end
	while p and p.Parent do
		p = p.Parent
		if p:IsA("BasePart") then return p end
	end
	return nil
end

-- ADMIN PANEL COMMANDS
local function getOtherPlayer()
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr ~= player then
			return plr
		end
	end
end

local function runCommand(cmd)
	local target = getOtherPlayer()
	if not target then return end
	pcall(function()
		ReplicatedStorage
			:WaitForChild("Packages")
			:WaitForChild("Net")
			:WaitForChild("RE/AdminPanelService/ExecuteCommand")
			:FireServer(target, cmd)
	end)
end

-- AP SPAM (jail after 1.5s)
local function runAPSpam()
	task.spawn(function()
		runCommand("tiny")
		runCommand("inverse")
		runCommand("jumpscare")
		runCommand("morph")
		runCommand("rocket")
		runCommand("balloon")
		task.wait(1.5)
		runCommand("jail")
	end)
end

-- LOCAL RAGDOLL (1.4s HOLD)
local function doRagdoll()
	pcall(function()
		ReplicatedStorage
			:WaitForChild("Packages")
			:WaitForChild("Net")
			:WaitForChild("RE/AdminPanelService/ExecuteCommand")
			:FireServer(player, "ragdoll")
	end)
end

-- OPTIMIZED AUTO-HOLD LOOP
task.spawn(function()
	while true do
		task.wait(0.1) -- small wait to reduce lag

		if not autoEnabled or not scanning then
			task.wait(0.5)
		else
			local char = player.Character
			local hrp = char and char:FindFirstChild("HumanoidRootPart")
			if not hrp then continue end

			local foundPrompt = false

			for _, prompt in ipairs(Workspace:GetDescendants()) do
				if prompt:IsA("ProximityPrompt") and prompt.Enabled then
					local part = findAnyPart(prompt)
					if part and (hrp.Position - part.Position).Magnitude <= grabRange then
						-- start holding
						if not holdingPrompts[prompt] then
							holdingPrompts[prompt] = true
							holdStartTimes[prompt] = tick()
							ragdolledThisHold[prompt] = nil
							pcall(function() prompt:InputHoldBegin() end)
							foundPrompt = true
						end
						break -- stop scanning after finding one prompt
					end
				end
			end

			-- check holding prompts
			for prompt in pairs(holdingPrompts) do
				if not prompt.Parent or not prompt.Enabled then
					holdingPrompts[prompt] = nil
					holdStartTimes[prompt] = nil
					ragdolledThisHold[prompt] = nil
				else
					-- ragdoll after 1.4s hold
					if holdStartTimes[prompt] and not ragdolledThisHold[prompt] and (tick() - holdStartTimes[prompt]) >= 1.4 then
						doRagdoll()
						ragdolledThisHold[prompt] = true
					end
				end
			end

			-- if no prompt found, small delay before next scan
			if not foundPrompt then
				task.wait(0.3)
			end
		end
	end
end)

-- PROMPT FINISHED â†’ AP SPAM
ProximityPromptService.PromptTriggered:Connect(function(prompt, _, triggeringPlayer)
	if triggeringPlayer and triggeringPlayer ~= player then return end
	if not autoEnabled then return end
	runAPSpam()
end)
