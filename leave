--// SERVICES
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local ProximityPromptService = game:GetService("ProximityPromptService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")

local player = Players.LocalPlayer

--// GUI
local gui = Instance.new("ScreenGui")
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local autoBtn = Instance.new("TextButton")
autoBtn.Size = UDim2.new(0, 100, 0, 40)
autoBtn.Position = UDim2.new(1, -110, 0.3, -20)
autoBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
autoBtn.TextColor3 = Color3.fromRGB(255,255,255)
autoBtn.Font = Enum.Font.GothamBold
autoBtn.TextSize = 18
autoBtn.Text = "Grab: OFF"
autoBtn.Parent = gui
autoBtn.BorderSizePixel = 0

--// STATE
local autoEnabled = false
local grabRange = 12

local activePrompt = nil
local isHolding = false
local holdStart = 0
local fired = false

-- Toggle
autoBtn.MouseButton1Click:Connect(function()
	autoEnabled = not autoEnabled
	autoBtn.Text = autoEnabled and "Grab: ON" or "Grab: OFF"
	autoBtn.BackgroundColor3 = autoEnabled and Color3.fromRGB(0,170,0) or Color3.fromRGB(200,50,50)

	if not autoEnabled and activePrompt then
		pcall(function() activePrompt:InputHoldEnd() end)
		activePrompt = nil
	end
end)

-- Find prompt part
local function getPromptPart(prompt)
	if prompt.Parent:IsA("BasePart") then return prompt.Parent end
	if prompt.Parent:IsA("Model") then
		return prompt.Parent.PrimaryPart or prompt.Parent:FindFirstChildWhichIsA("BasePart")
	end
end

-- Other player
local function getOtherPlayer()
	for _,p in ipairs(Players:GetPlayers()) do
		if p ~= player then return p end
	end
end

-- Command
local function runCommand(cmd, target)
	pcall(function()
		ReplicatedStorage.Packages.Net["RE/AdminPanelService/ExecuteCommand"]:FireServer(target, cmd)
	end)
end

-- AUTO HOLD (SAFE)
RunService.Heartbeat:Connect(function()
	if not autoEnabled or activePrompt then return end

	local char = player.Character
	local hrp = char and char:FindFirstChild("HumanoidRootPart")
	if not hrp then return end

	for _,prompt in ipairs(Workspace:GetDescendants()) do
		if prompt:IsA("ProximityPrompt") and prompt.Enabled then
			local part = getPromptPart(prompt)
			if part and (hrp.Position - part.Position).Magnitude <= grabRange then
				activePrompt = prompt
				pcall(function() prompt:InputHoldBegin() end)
				break
			end
		end
	end
end)

-- HOLD START (REAL)
ProximityPromptService.PromptButtonHoldBegan:Connect(function(prompt)
	if not autoEnabled or prompt ~= activePrompt then return end
	isHolding = true
	holdStart = tick()
	fired = false
end)

-- HOLD END (INSTANT CANCEL)
ProximityPromptService.PromptButtonHoldEnded:Connect(function(prompt)
	if prompt == activePrompt then
		isHolding = false
		activePrompt = nil
		fired = false
	end
end)

-- TIMER (CLEAN)
RunService.Heartbeat:Connect(function()
	if not isHolding or fired then return end

	if tick() - holdStart >= 1.45 then
		local other = getOtherPlayer()
		if other then
			runCommand("balloon", other)
		end
		fired = true
	end
end)
