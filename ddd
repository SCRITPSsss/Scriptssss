--// GUI CREATION --------------------------------------------

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "AdminButtonGui"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 70, 0, 28)
button.Position = UDim2.new(1, -90, 0.55, 0) -- middle-right, slightly down
button.AnchorPoint = Vector2.new(0, 0)
button.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
button.Text = "SPAM"
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.GothamBold
button.TextSize = 14
button.BorderSizePixel = 0
button.AutoButtonColor = false
button.ZIndex = 10
button.Parent = gui

-- subtle hover
button.MouseEnter:Connect(function()
	button.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
end)

button.MouseLeave:Connect(function()
	button.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
end)

--// COMMAND EXECUTION ---------------------------------------

local function getOtherPlayer()
	for _, plr in ipairs(game.Players:GetPlayers()) do
		if plr ~= player then
			return plr
		end
	end
	return nil
end

local function runCommand(cmd)
	local target = getOtherPlayer()
	if not target then return end

	game:GetService("ReplicatedStorage")
		:WaitForChild("Packages")
		:WaitForChild("Net")
		:WaitForChild("RE/AdminPanelService/ExecuteCommand")
		:FireServer(target, cmd)
end

button.MouseButton1Click:Connect(function()
	runCommand("tiny")
	runCommand("balloon")
	runCommand("rocket")
	runCommand("inverse")
end)
